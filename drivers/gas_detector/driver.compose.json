{
  "id": "gas_detector",
  "name": {
    "en": "Smart Gas Detector"
  },
  "class": "sensor",
  "platforms": ["local"],
  "connectivity": ["zigbee"],
  "capabilities": [
    "alarm_gas",
    "alarm_problem"
  ],
  "capabilitiesOptions": {
    "alarm_gas": {
      "title": { "en": "Gas alarm" },
      "uiComponent": "alarm",
      "alarm": true,
      "insightsTitleTrue": { "en": "Gas detected!" },
      "insightsTitleFalse": { "en": "Gas alarm cleared" }
    },
    "alarm_problem": {
      "title": { "en": "Device fault" },
      "uiComponent": "alarm",
      "alarm": true,
      "insightsTitleTrue": { "en": "Device fault detected" },
      "insightsTitleFalse": { "en": "Device fault cleared" }
    }
  },
  "energy": {
    "approximation": { "usageConstant": 1.5 }
  },
  "images": {
    "large": "{{driverAssetsPath}}/images/large.png",
    "small": "{{driverAssetsPath}}/images/small.png"
  },
  "zigbee": {
    "manufacturerName": ["_TYZB01_0w3d5uw3"],
    "productId": ["TS0204"],
    "endpoints": {
      "1": {
        "clusters": [0, 3, 1280, 2821],
        "bindings": [3, 1280]
      }
    },
    "learnmode": {
      "image": "{{driverAssetsPath}}/icon.svg",
      "instruction": {
        "en": "Insert a pin or paperclip into the reset pinhole and hold for 5 seconds until the LED flashes rapidly."
      }
    }
  }
}